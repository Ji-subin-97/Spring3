<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.iu.s1.bankbook.BankBookDAO">
  	<select id="getCount" resultType="java.lang.Long" parameterType="com.iu.s1.util.Pager">
  		SELECT COUNT(bookNumber) FROM BANKBOOK
	  		WHERE 
			            <choose>
			            	<when test="kind == 'num'">
			            		bookNumber
			            	</when>
			            	<when test="kind == 'name'">
			            		bookName
			            	</when>
			            	<otherwise>
			            		bookRate
			            	</otherwise>
			            </choose>
			            LIKE '%' || #{search} || '%'
  	</select>
  	<insert id="setInsert">
  		INSERT INTO BANKBOOK (bookNumber, bookName, bookRate, bookSale) VALUES (bankbook_seq.nextval, #{bookName}, #{bookRate}, #{bookSale})
  	</insert>
  	
  	<select id="getList" resultType="com.iu.s1.bankbook.BankBookDTO" parameterType="com.iu.s1.util.Pager">
  		SELECT * FROM
		    (SELECT ROWNUM R, BK.* FROM
		        (SELECT *
		            FROM BANKBOOK
		            WHERE 
		            <choose>
		            	<when test="kind == 'num'">
		            		bookNumber
		            	</when>
		            	<when test="kind == 'name'">
		            		bookName
		            	</when>
		            	<otherwise>
		            		bookRate
		            	</otherwise>
		            </choose>
		            LIKE '%' || #{search} || '%'
		            ORDER BY BOOKNUMBER DESC
		        ) 
		        BK)
		WHERE R between #{startRow} and #{lastRow}
  	</select>
  	
  	<select id="getSelect" parameterType="com.iu.s1.bankbook.BankBookDTO" resultType="com.iu.s1.bankbook.BankBookDTO">
  		SELECT * FROM BANKBOOK WHERE BOOKNUMBER=#{bookNumber}
  	</select>
  	
  	<delete id="setDelete" parameterType="java.lang.Integer">
  		DELETE BANKBOOK WHERE BOOKNUMBER=#{bookNumber}
  	</delete>
  	
  	<update id="setUpdate" parameterType="com.iu.s1.bankbook.BankBookDTO">
  		UPDATE BANKBOOK SET BOOKNAME=#{bookName}, BOOKRATE=#{bookRate}, BOOKSALE=#{bookSale} WHERE BOOKNUMBER=#{bookNumber}
  	</update>
  </mapper>